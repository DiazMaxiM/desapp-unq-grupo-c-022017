<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 <hibernate-mapping default-access="field"
 	default-cascade="save-update">
 	<class name="model.Account">
 		<id column="idUser" name="id">
 			<generator class="foreign" >
 			<param name="property">user</param>
 			            </generator>
 		</id>
 		 <list name="transactions" cascade="save-update" inverse="false">
        	<key column="transactions_user"/>
        	<list-index column="indice"></list-index> 
        	<one-to-many class="model.Transaction"/>
        </list>
 	</class>
 </hibernate-mapping>