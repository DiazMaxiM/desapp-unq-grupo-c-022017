<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
	default-cascade="save-update">
	<class name="model.User">
		<id column="idUser" name="id">
			<generator class="foreign" >
 			<param name="property">address</param>
 		</generator>		
 		</id>
		<one-to-one name="telephone" cascade="all" class="model.Telephone" />
		<one-to-one name="address" cascade="all" class="model.Address" />
		<many-to-one name="account" cascade="all" class="model.Account" />
	
	
	
		<property name="cuit" unique="true" />
		<property name="name" />
		<property name="mail" unique="true"/>
		<property name="surname" />
		<property name="password" />
		<property name="typeUser">
		<type name="org.hibernate.type.EnumType">
            <param name="enumClass">model.TypeUser</param>
            <param name="useNamed">true</param>
        </type> 
        </property>
		<joined-subclass name="model.Provider" extends="model.User">
				<key column="idUser" />
				<property name="status" column="status" />
				<list name = "servicesOffered" cascade="all"  >
         <key column = "idUser"/>
         <list-index column = "idx"/>
         <one-to-many class="model.Service"/>
      	</list>
		<list name = "historicalOrders" cascade="all"  >
         <key column = "idUser"/>
         <list-index column = "idx"/>
         <one-to-many class="model.HistoricalOrder"/>
      	</list>
		</joined-subclass>
		
		
	</class>
</hibernate-mapping>